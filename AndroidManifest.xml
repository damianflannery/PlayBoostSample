<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.playboost.android.sample"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-permission
		android:name="android.permission.INTERNET" />

	<application
		android:icon="@drawable/icon"
		android:theme="@android:style/Theme.Light"
		android:label="@string/app_name">
		<activity
			android:name=".HelloPlayBoost"
			android:label="@string/app_name">

			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name="com.playboost.android.PlayBoostOffersActivity"
			android:configChanges="keyboardHidden|orientation" />

		<activity android:name="com.playboost.android.PlayBoostSupportActivity" />	
		
		<activity android:name="com.playboost.android.PlayBoostOfferDetailActivity" />	
	
		<activity android:name="com.playboost.android.PlayBoostCompleteOfferActivity" />	
	</application>
	<uses-sdk
		android:minSdkVersion="4" />

</manifest> 